class Dog{
    String name;
    String says;
}


public class H4EX5 {
    static void compare(Dog dog1, Dog dog2){
        System.out.println("== na verqni posylann'a: " + (dog1 == dog2));
        System.out.println("equals() na verqni posylann'a: " + (dog1.equals(dog2)));
        System.out.println("== na names: " + (dog1.name == dog2.name));
        System.out.println("equals() na names: " + (dog1.name.equals(dog2.name)));
        System.out.println("== na says: " + (dog1.says == dog2.says));
        System.out.println("equals() na says: " + (dog1.says.equals(dog2.says)));
        System.out.println("_____________________________________________________");
    }
    public static void main (String[] args){
        Dog dog1 = new Dog();
        Dog dog2 = new Dog();
        Dog dog3 = dog1;
        dog1.name = "spot";
        dog2.name = "scruffy";
        dog1.says = "Ruff!";
        dog2.says = "Wurf!";
        System.out.println("Porivn'ujemo objekty dog1 i dog2:");
        compare(dog1, dog2);
        System.out.println("Porivn'ujemo objekty dog1 i dog3:");
        compare(dog1, dog3);
        System.out.println("Porivn'iujemo pbjekty dog2 i dog3:");
        compare(dog2, dog3);

    }
}
